<Alloy>
	<Window class="eventList" title="Local Ruckus">
		<Window id="timePicker" bottom="0" selectionIndicator="true" useSpinner="true" height="0" opacity="1.0" backgroundColor="white" zIndex="999">
			<Picker id="picker" width="Ti.UI.FILL" height="Ti.UI.FILL" onChange="changeTime">
				<PickerColumn id="column1">
					<PickerRow title="Any Time" value="Any Time"/>
					<PickerRow title="Today" value="Today"/>
					<PickerRow title="Tomorrow" value="Tomorrow"/>
					<PickerRow title="This Weekend" value = "This Weekend"/>
					<PickerRow title="Next Week" value = "Next Week"/>
					<PickerRow title="Next Weekend" value="Next Weekend"/>
					<PickerRow title="Later" value="Later"/>
				</PickerColumn>
			</Picker>
		</Window>
		<View height="60dp" top="0">
			<ImageView image="/images/search-icon.png" class="search-icon" onClick="toggleSearchDrawer"></ImageView>
			<Label id="locationLabel" onClick="toggleSearchDrawer"/>
		</View>
		<Window id="topDrawer" width="Ti.UI.FILL" height = "0" top="60" opacity="0.8">
			<View backgroundColor="black" height="Ti.UI.FILL" width="Ti.UI.FILL" layout="vertical">
				<View top="0" height="Ti.UI.SIZE">
					<Button onClick="changeSearchCriteria" color="white" zIndex="9999" right="10">Done</Button>
				</View>
				<View top="10" height="Ti.UI.SIZE">
					<TextField id="searchTerms" class="topDrawerText" color="black"/>
					<Button id="myLocation" width="10" left="0"top="50" borderRadius="2" borderColor="black" borderWidth="2" backgroundColor="white" onClick="myLocation">***</Button>
					<TextField id="addressTextField" class="topDrawerText" color="black" onChange="changeAddress" clearButtonMode="Ti.UI.INPUT_BUTTONMODE_ALWAYS" />
					<View layout="horizontal" top="95">
						<Slider id="slider" min="1" max="50" left="15" width="70%" value="10" onChange="updateLabel"/>
						<Label id="radiusLabel" color="white" left="5" width="55" focusable="false"></Label>
						<Button onClick="showTimePicker" class="anyTimeBtn">Any Time</Button>
					</View>
					<View top="200" bottom="0" left="0" right="0" height="1" borderWidth="1" borderColor="orange" />
					<View layout="vertical" top="225">
						<Label id="addContent" class="addContent link" text="Add Event to Local Ruckus" color="silver" onClick="addContent"/>
						<Label id="suggestContent" class="suggestContent link" text="Suggest a Business or Event" color="silver" onClick="suggestContent"/>
						<Label id="terms" class="terms link" text="Terms of use" color="silver" onClick="terms"/>
						<Label id="privacy" class="privacy link" text="Privacy Policy" color="silver" onClick="privacy"/>
					</View>
				</View>
			</View>

		</Window>
		<TableView id="table" onClick="openDetail" top="60dp" height="Ti.UI.FILL"  backgroundColor="transparent"  borderColor="#55a9a7a7">
			<Widget id="ptr" src="nl.fokkezb.pullToRefresh" onRelease="myLoader" />
			<Widget id="is" src="nl.fokkezb.infiniteScroll" onEnd="loadMore" />
		</TableView>
		<Toolbar platform="ios" bottom="0" height="60dp" barColor="rgba(255,255,255,0.4)" translucent="true">
			<Items>
				<Button onClick="loadEntertainment" backgroundImage="/images/toolbar_icons/everything_star.png"></Button>
				<FlexSpace/>
				<Button onClick="loadMusic" backgroundImage="/images/toolbar_icons/music_note.png"></Button>
				<FlexSpace/>
				<Button onClick="loadArts" backgroundImage="/images/toolbar_icons/arts_pallett.png"></Button>
				<FlexSpace/>
				<Button onClick="loadFamily" backgroundImage="/images/toolbar_icons/family_family.png"></Button>
				<FlexSpace/>
				<Button onClick="loadFood" backgroundImage="/images/toolbar_icons/food_utensils.png"></Button>
				<FlexSpace/>
				<Button onClick="loadCampus" backgroundImage="/images/toolbar_icons/student_only.png"></Button>
			</Items>
		</Toolbar>
	</Window>
</Alloy>