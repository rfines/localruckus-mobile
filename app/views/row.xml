<Alloy>
	<TableViewRow className="tableRow" selectedBackgroundColor="white" selectedColor="white">
		<View class="eventImage" width="20%" left="0">
			<ImageView id="detailImage"/>
		</View>
		<View class="eventDetails" width="60%" selectedColor="white">
			<Label id="name" />
		</View>
		<View class="eventTime" width="18%" right="0">
			<View class="calendarPage">
				<Label id="date" class="date" selectedColor="white"></Label>
				<Label id="day" class="day"></Label>
				<Label id="time" class="time"></Label>
			</View>
		</View>
	</TableViewRow>
</Alloy>