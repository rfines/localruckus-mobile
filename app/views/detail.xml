<Alloy>
	<Window id="myWindow">
		<Button onClick="backToList" height="60dp" left="7dp" top="7dp">Back</Button>
		<View id="mapview" ns="Ti.Map" layout="vertical" onClick="doClick" top="60" height="130dp" opacity="0.7" animate="true" regionFit="true" userLocation="true" mapType="Ti.Map.STANDARD_TYPE" >
        </View>
        <ScrollView height="Ti.UI.SIZE" top="190dp" layout="vertical" scrollType="vertical" contentWidth="Ti.UI.FILL">
        	<View id="nameView" layout="vertical" height="Ti.UI.SIZE" width="98%">
        		<Label id="name" class="name"/>
        		<Label id="time"/>
        	</View>
    		<ImageView id="detailImage" image="/images/localRuckusPlaceholder.png"></ImageView>
        	<Label id="businessName" onClick="showBusinessDetails" />
    		<Label id="location" class="location" onClick="getDirections"/> 
        	<Label><Label id="descriptionView" height="Ti.UI.SIZE" top="0" bottom="60" left="10" right="10"></Label></Label>
		</ScrollView>
	</Window>
</Alloy>