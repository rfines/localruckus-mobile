<Alloy>
	<Window layout="vertical">
		<View id="mapview" ns="Ti.Map" onClick="doClick" height="200" animate="true" regionFit="true" userLocation="true" mapType="Ti.Map.STANDARD_TYPE" >
        	<!-- Place other child views here, such as an ImageView to add an overlay. -->
        </View>
        <View id="details" height="500" >
        	<Label id="name" platform="android" class="name"/>
			<Label id="description" />
			<Label id="location" class="location"/>
			<Label id="businessName" class="name" onClick="showBusinessDetails" />
			<Label id="time" />
			<Label id="website" onClick="linkToPage" />
			<Label id="tickets" onClick="linkToPage"/>
		</View>
	</Window>
</Alloy>