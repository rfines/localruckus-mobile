<Alloy>
	<Window layout="vertical" id="myWindow">
		<ImageView id="detailImage"></ImageView>
		<View id="mapview" ns="Ti.Map" layout="vertical" onClick="doClick" height="150" animate="true" regionFit="true" userLocation="true" mapType="Ti.Map.STANDARD_TYPE" >
        </View>
        <View id="locationView" layout="vertical">
        		<Label id="businessName" onClick="showBusinessDetails" />
        		<Label id="location" class="location" onClick="getDirections"/>
        	</View>
        <ScrollView layout="vertical" height="Ti.UI.FILL">
        	<View id="nameView" layout="vertical">
        		<Label id="name" class="name"/>
        		<Label id="time"/>
        	</View>
			<WebView id="descriptionView" >
			</WebView>
		</ScrollView>
	</Window>
</Alloy>