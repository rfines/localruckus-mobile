<Alloy>
	<Window id="myWindow">
		<Button onClick="backToList" height="50dp" right="20dp" top="0">Back</Button>
		<View id="mapview" ns="Ti.Map" layout="vertical" onClick="doClick" top="50" height="150dp" animate="true" regionFit="true" userLocation="true" mapType="Ti.Map.STANDARD_TYPE" >
        </View>
        <View id="locationView" top="250dp" height="50dp" layout="vertical">
    		<Label id="businessName" onClick="showBusinessDetails" />
    		<Label id="location" class="location" onClick="getDirections"/>
        </View>
        <ScrollView height="Ti.UI.FILL" top="300dp" layout="vertical">
        	<ImageView id="detailImage" top="50dp"></ImageView>
        	<View id="nameView" layout="vertical">
        		<Label id="name" class="name"/>
        		<Label id="time"/>
        	</View>
			<Label id="descriptionView" height="Ti.UI.FILL">
			</Label>
		</ScrollView>
	</Window>
</Alloy>