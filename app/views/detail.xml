<Alloy>
	<Window id="myWindow">
		<Button onClick="backToList" height="60dp" right="20dp" top="10dp">Back</Button>
		<View id="mapview" ns="Ti.Map" layout="vertical" onClick="doClick" top="50" height="150dp" animate="true" regionFit="true" userLocation="true" mapType="Ti.Map.STANDARD_TYPE" >
        </View>
        <ScrollView height="Ti.UI.FILL" top="210dp" layout="vertical">
        	<View id="nameView" layout="vertical" height="Ti.UI.SIZE">
        		<Label id="name" class="name"/>
        		<Label id="time"/>
        	</View>
    		<ImageView id="detailImage" image="/images/localRuckusPlaceholder.png"></ImageView>
        	<Label id="businessName" onClick="showBusinessDetails" />
    		<Label id="location" class="location" onClick="getDirections"/> 
    		<Button onClick="getDirections" class="getDirections">Get Directions</Button>
        	<Label id="descriptionView" height="Ti.UI.FILL"></Label>
		</ScrollView>
	</Window>
</Alloy>